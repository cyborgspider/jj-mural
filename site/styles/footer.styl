footer
  background  rgba(45,39,25,0.7)
  line-height 28px
  color       $color-sand
  height      44px
  padding-top 20px
  position relative
  bottom 0
  @media screen and (max-width:640px)
    display none
.footer-wrap
  width      1280px
  overflow   hidden
  @media screen and (max-width:1024px)
    width 970px
.right-side
  float       right
  font-size   14px
  font-weight normal
#social
  padding-right 20px
  border-right  solid 1px #b0a57a
  float         left
.social-link
  width        28px
  height       28px
  background   url(../img/social-icons.png) no-repeat
  display      inline-block
  text-indent  -9999px
  margin-right 4px
  &.yelp
    background-position 0 0
    margin-left 13px
  &.facebook
    background-position -28px 0
  &.pinterest
    background-position -56px 0
  &.instagram
    background-position -84px 0
    margin 0

#copyright
  padding-left 20px
  float        left

#contact-btn
  font-size   20px
  width       290px
  z-index     2
  position    absolute
  top         0
  line-height 64px
  height      64px
  transition background-color 0.2s
  padding-left 30px
  &.is-active
    background-color #000

#contact-tab
  width      230px
  height     0
  opacity    0
  position   absolute
  background url(../img/footer-top.png) no-repeat 0 0 rgba(27,23,11,.85)
  z-index    1
  font-size  18px
  color      #fff
  bottom     64px
  padding    15px 30px 0 30px
  display    none
  a
    color #fff
  &>p
    line-height   1.5
    margin-bottom 0
    &.first
      line-height 1.5
  &.is-active
    display    block
    opacity    1
    bottom     64px
    height     270px

.contact-tab-button
  padding         0 13px
  width           147px
  height          40px
  line-height     40px
  color           #fff
  margin-top      30px
  background      $button-background
  font-size       15px
  display         block
  text-decoration none
  text-align      center
  font-sans()
  &:hover
    text-decoration underline
.btn-arrow
  //background  url(../img/sprite.png) 0 -46px
  width       9px
  height      13px
  display     inline-block

#mobile-footer
  display     none
  @media screen and (max-width:640px)
    display block  
  background  rgba(45,39,25,0.7)
  line-height 1.5
  color       $color-sand
  padding     10px 0
  position    relative
  bottom      0  
  text-align  center
  &>.contact-tab-button
    margin 0 auto 10px
    padding 0
  &>.phone-link
    color           white
    text-decoration none
    font-size       18px
    margin-bottom   10px
  &>.social-wrap
    margin 10px 0

