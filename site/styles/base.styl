
html
  margin     0
  padding    0
  overflow-x hidden
  overflow-y auto
  height     100%
  height 100%

body
  margin      0
  padding     0
  line-height 1
  background  #fff
  font-family 'Jacques Francois', serif
  font-size   16px
  font-weight normal
  color       #939393
  overflow-x  hidden
  overflow-y  auto
  height      100%

a
  text-decoration none
  &:hover
    text-decoration underline

ul
ol
  margin     0
  padding    0 
  list-style none

.dn
  display none

#wrap
  min-height    100%
  margin-bottom -64px
  &:after
    content ''
    display block
    height  64px

section
  display none
  padding-left 290px
  position relative
  background url(../img/bg-texture.png) repeat-y 0 0
  &.is-active
    display block