
html
  margin     0
  padding    0
  overflow-x hidden
  overflow-y auto
  height     100%
  height 100%

body
  margin      0
  padding     0
  line-height 1
  background  #fff
  font-family 'Jacques Francois', serif
  font-size   16px
  font-weight normal
  color       #939393
  overflow-x  hidden
  overflow-y  auto
  height      100%
  background url(../img/bg-texture.png) repeat-y 0 0  


ul
ol
  margin     0
  padding    0 
  list-style none

.dn
  display none


#wrap
  min-height    100%
  margin-bottom -64px
  &:after
    content ''
    display block
    height  64px

section
  display      none
  padding-left 290px
  padding-top  58px
  position     relative
  min-height   460px
  width    910px
  &.is-active
    display block
  &>p
    line-height   1.8
    margin-bottom 30px
    a
      color $text-body-link