header
  height     294px
  background url(../img/bg-header.jpg) 0 0 no-repeat $body-brown
  transition background-position 0.4s ease-in-out
  min-width  1280px
  @media screen and (max-width:1024px)
    min-width 1024px
  @media screen and (max-width:768px)
    height 220px

#mobile-nav
  display    none
  position   fixed
  top        0
  left       0
  height     80px
  background $trans-dark-sand
  width      100%
  z-index    10
  &.on
    background $body-brown
  @media     screen and (max-width:768px)
    display block
.mobile-logo
  background url(../img/logo-small.png)
  width      95px
  height     60px
  left       20px
  top        10px 
  position   absolute
  &>a
    display block
    width   100%
    height  100%
.mobile-toggle
  width      35px
  height     25px
  position   absolute
  right      10px
  top        25px
  background url(../img/menu-icon.png) no-repeat
  cursor     pointer
  z-index    10
.mobile-menu
  display     none
  background  $body-brown
  position    absolute
  top         80px
  width       100%
  padding     0 20px 20px
  z-index     10
  line-height 2
  &>a
    display         block
    color           white
    text-decoration none
    line-height     1.7
  &>h2
    font-size 18px

#mobile-nav.on
  .mobile-menu
    display block

#main-nav
  overflow hidden
  position relative
  @media screen and (max-width:768px)
    display none
  &>li
    display    inline-block
    margin     0 1px 0 0
    width      250px
    @media screen and (max-width:1024px)
      width 200px
    padding    15px 20px
    background $trans-dark-sand
    height     110px
    &:hover
      background $trans-light-sand 
      &>h2
      &>a
        color #000         
    &.is-active
      background $trans-white
      color      #000
      border     solid 3px #474230
      margin-top -3px
      height     123px
      h2
      a
        color #000
    &.empty
      width    100%
      position absolute
      &:hover
        background $trans-dark-sand
    &.category-work
      margin-right 0

    &>h2
      color       $color-sand
      font-size   20px
      font-weight normal
      margin      0 0 15px
    &>a
      display       block
      color         $color-sand
      margin-bottom 8px
      display       list-item
      text-decoration none
      transition padding 0.2s
      &.is-active
      &:hover
        background url(../img/sprite.png) 0 -34px no-repeat
        padding-left 13px


#logo-container
  background   $trans-dark-sand
  width        338px 
  float        left
  margin-right 1px
  height       140px
  &.on
    background $body-brown

  @media screen and (max-width:1024px)
    width 260px
  @media screen and (max-width:768px)
    display none  

#logo
  width       168px
  height      106px
  background  url(../img/logo.png) no-repeat
  text-indent -9999px
  display     block
  position    relative
  top         17px
  left        33px