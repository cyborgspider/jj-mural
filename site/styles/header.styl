header
  height     294px
  background url(../img/bg-header.jpg) 0 0 no-repeat $body-brown
  transition background-position 0.4s ease-in-out
  min-width  1280px
  @media screen and (max-width:1024px)
    min-width 1024px

#main-nav
  overflow hidden
  position relative
  &>li
    display    inline-block
    margin     0 1px 0 0
    width      250px
    @media screen and (max-width:1024px)
      width 200px
    padding    15px 20px
    background $trans-dark-sand
    height     110px
    &:hover
      background $trans-light-sand 
      &>h2
      &>a
        color #000         
    &.is-active
      background $trans-white
      color      #000
      border     solid 3px #474230
      margin-top -3px
      height     123px
      h2
      a
        color #000
    &.empty
      width    100%
      position absolute
      &:hover
        background $trans-dark-sand
    &.category-work
      margin-right 0

    &>h2
      color       $color-sand
      font-size   20px
      font-weight normal
      margin      0 0 15px
    &>a
      display       block
      color         $color-sand
      margin-bottom 8px
      display       list-item
      text-decoration none
      transition padding 0.2s
      &.is-active
      &:hover
        background url(../img/sprite.png) 0 -34px no-repeat
        padding-left 13px


#logo-container
  background   $trans-dark-sand
  width        338px 
  @media screen and (max-width:1024px)
    width 260px
  float left
  margin-right 1px
  height       140px

#logo
  width       168px
  height      106px
  background  url(../img/logo.png) no-repeat
  text-indent -9999px
  display     block
  position    relative
  top         17px
  left        33px
