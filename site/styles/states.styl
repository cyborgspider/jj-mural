$header-height = -294px
body.home
  background      url(../img/bg-home.jpg) no-repeat center
  background-size cover
  height          100%
  header
    background none
    height     250px
    @media screen and (max-width:768px)
      height auto
  section
    padding 100px 0 0
    background none

body.category-about
  header
    background-position 0 0
  section
    background url(../img/bg-section-about.jpg) no-repeat 60px 60px
    @media screen and (max-width:768px)
      background none

body.category-services
  header
    background-position 0 $header-height
  section
    background url(../img/bg-section-services.jpg) no-repeat 60px 60px
    @media screen and (max-width:768px)
      background none

body.category-work
  header
    background-position 0 $header-height * 2
  section
    padding-left 60px
    @media screen and (max-width:768px)
      padding-left 20px
      background none

body.category-contact
  header
    background-position 0 $header-height *3
  section
    background url(../img/bg-section-contact.jpg) no-repeat 60px 60px
    @media screen and (max-width:768px)
      background none